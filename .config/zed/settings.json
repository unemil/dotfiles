{
  "edit_predictions": {
    "enabled_in_text_threads": true,
    "copilot": {
      "proxy": "http://username:password@ip:port"
    }
  },
  "theme": "Mellow",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 14,
  "buffer_font_family": "JetBrains Mono",
  "ui_font_size": 15,
  "ui_font_family": "JetBrains Mono",
  "agent_font_size": 15,
  "restore_on_startup": "none",
  "cursor_blink": false,
  "current_line_highlight": "none",
  "show_whitespaces": "none",
  "calls": {
    "share_on_join": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "scrollbar": {
    "show": "system",
    "symbols_selections": false,
    "axes": {
      "horizontal": false
    }
  },
  "gutter": {
    "line_numbers": false,
    "code_actions": false,
    "folds": false
  },
  "indent_guides": {
    "enabled": false
  },
  "seed_search_query_from_cursor": "selection",
  "project_panel": {
    "file_icons": false,
    "folder_icons": false,
    "indent_size": 10,
    "auto_fold_dirs": true
  },
  "outline_panel": {
    "button": false
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": "never"
  },
  "message_editor": {
    "auto_replace_emoji_shortcode": false
  },
  "notification_panel": {
    "button": false
  },
  "agent": {
    "version": "2",
    "enabled": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "default_profile": "ask"
  },
  "show_call_status_icon": false,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "extend_comment_on_newline": false,
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "auto_update": false,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "terminal": {
    "toolbar": {
      "title": false
    },
    "blinking": "off",
    "line_height": "standard"
  },
  "languages": {
    "CSV": {
      "show_edit_predictions": false,
      "format_on_save": "off"
    },
    "YAML": {
      "show_edit_predictions": false,
      "format_on_save": "off"
    }
  },
  "lsp": {
    "gopls": {
      "initialization_options": {
        "usePlaceholders": false
      }
    }
  },
  "task": {
    "show_status_indicator": false
  },
  "proxy": "http://username:password@ip:port"
}
